include $(TOPDIR)/rules.mk
PKG_NAME:=onion-sh-lib
PKG_VERSION:=0.2
PKG_RELEASE:=1


PKG_SOURCE_PROTO:=git
PKG_SOURCE_VERSION:=HEAD
PKG_SOURCE_URL:=https://github.com/OnionIoT/onion-sh-lib.git
PKG_SOURCE_SUBDIR:=$(PKG_NAME)
PKG_SOURCE:=$(PKG_NAME).tar.gz
PKG_BUILD_DIR:=$(BUILD_DIR)/$(PKG_NAME)

include $(INCLUDE_DIR)/package.mk

define Package/$(PKG_NAME)
	SECTION:=onion
	CATEGORY:=Onion
	SUBMENU:=Libraries
	TITLE:=Library of commonly used code for the Omega
	DEPENDS:=+libubox
endef


define Package/$(PKG_NAME)/description
Library of commonly used code for the Omega
endef

#define Package/$(PKG_NAME)/Build/Compile
#	$(MAKE) -C $(PKG_BUILD_DIR)
#endef

define Package/$(PKG_NAME)/install
	$(INSTALL_DIR) $(1)/usr/lib/onion
	$(INSTALL_BIN) $(PKG_BUILD_DIR)/lib.sh $(1)/usr/lib/onion/
endef

$(eval $(call BuildPackage,$(PKG_NAME)))

